package com.hdcc.services;

import java.io.IOException;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.util.StringUtils;
import org.springframework.web.multipart.MultipartFile;

import com.hdcc.entity.UploadPassportPicture;
import com.hdcc.exceptions.FileNotFoundException;
import com.hdcc.exceptions.FileStorageException;
import com.hdcc.repository.UploadPassportPictureRepo;

@Service
public class UploadPassportPictureService {
	
	@Autowired
	private UploadPassportPictureRepo uploadPassportPictureRepo;
	
//	public void uploadImage(MultipartFile file) {
//		UploadPassportPicture uploadPassportPicture = new UploadPassportPicture();
//		try {
//			uploadPassportPicture.setData(file.getBytes());
//			uploadPassportPicture.setFileType(file.getContentType());
//			uploadPassportPicture.setFileName(file.getOriginalFilename());
//			uploadPassportPictureRepo.save(uploadPassportPicture);
//		} catch (IOException e) {
//			e.printStackTrace();
//		}
//	}
	 public UploadPassportPicture storeFile(MultipartFile file) {
	        // Normalize file name
	        String fileName = StringUtils.cleanPath(file.getOriginalFilename());

	        try {
	            // Check if the file's name contains invalid characters
	            if (fileName.contains("..")) {
	                throw new FileStorageException("Sorry! Filename contains invalid path sequence " + fileName);
	            }

	            UploadPassportPicture dbFile = new UploadPassportPicture();

	            return uploadPassportPictureRepo.save(dbFile);
	        } catch (IOException ex) {
	            throw new FileStorageException("Could not store file " + fileName + ". Please try again!", ex);
	        }
	    }

	    public UploadPassportPicture getFile(String fileId) {
	        return uploadPassportPictureRepo.findById(fileId)
	            .orElseThrow(() - > new FileNotFoundException("File not found with id " + fileId));
	    }

}
