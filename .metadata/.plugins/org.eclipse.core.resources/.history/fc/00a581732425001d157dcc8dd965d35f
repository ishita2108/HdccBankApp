package com.hdcc.services;

import java.io.IOException;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import com.hdcc.entity.UploadPassportPicture;
import com.hdcc.repository.UploadPassportPictureRepo;

@Service
public class UploadPassportPictureService {
	
	@Autowired
	private UploadPassportPictureRepo uploadPassportPictureRepo;
	
	public void uploadImage(MultipartFile file) {
		UploadPassportPicture uploadPassportPicture = new UploadPassportPicture();
		try {
			uploadPassportPicture.setImage(file.getBytes());
			uploadPassportPicture.setFileType(file.getContentType());
			uploadPassportPicture.setFileName(file.getOriginalFilename());
			uploadPassportPictureRepo.save(uploadPassportPicture);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
